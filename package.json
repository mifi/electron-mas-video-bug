{
  "name": "electron-mas-video-bug",
  "productName": "Test",
  "description": "Test",
  "version": "0.0.1",
  "packageManager": "yarn@4.9.1",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2"
  },
  "devDependencies": {
    "electron": "28",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "files": [
      "main.js",
      "index.html"
    ],
    "appId": "APPID",
    "mac": {
      "hardenedRuntime": true,
      "notarize": true,
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "mas",
          "arch": "universal"
        }
      ]
    },
    "mas": {
      "hardenedRuntime": false,
      "notarize": false,
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": "Mac_App_Store_provisioning_profile.provisionprofile"
    }
  }
}
